@model ArtsofteTestBack.ViewModels.RegisterModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div>
        <div>
            <label asp-for="FIO">Введите ФИО</label><br />
            <input type="text" asp-for="FIO" />
            <span asp-validation-for="FIO" />
        </div>
        <div>
            <label asp-for="Phone">Введите Номер телефона</label><br />
            <input type="text" asp-for="Phone" />
            <span asp-validation-for="Phone" />
        </div>
        <div>
            <label asp-for="Email">Введите Email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="PasswordConfirm">Повторите пароль</label><br />
            <input asp-for="PasswordConfirm" />
            <span asp-validation-for="PasswordConfirm" />
        </div>
        <div>
            <input type="submit" value="Регистрация" class="btn btn-outline-dark" />
        </div>
    </div>
</form>