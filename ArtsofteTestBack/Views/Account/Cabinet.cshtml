@model User

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>

    <h1>Информация об авторизованном пользователе</h1>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ФИО пользователя
        </dt>
        <dd class="col-sm-10">
            @Model.FIO
        </dd>
        <dt class="col-sm-2">
            Номер телефона
        </dt>
        <dd class="col-sm-10">
            @Model.Phone
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Дата последней авторизации
        </dt>
        <dd class="col-sm-10">
            @Model.LastLogin
        </dd>
    </dl>
</div>
<div class="btn-group-sm">
    <a asp-action="Logout" asp-controller="Account" class="btn btn-outline-dark">Выход</a>
</div>
